<Window x:Class="ImageCopyApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hi-Res Image Copier" Height="450" Width="750"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="16"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Low Res Folder -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
            <TextBlock Text="Low Res Folder:" VerticalAlignment="Center" Width="140"/>
            <TextBox x:Name="txtLowRes" Width="360" Margin="8,0" IsReadOnly="True"/>
            <Button Content="Browse..." Width="90" Click="BrowseLowRes_Click"/>
            <!-- Badge -->
            <Border Background="Green" CornerRadius="12" Width="24" Height="24" Margin="8,0,0,0">
                <TextBlock x:Name="lblLowResCount" Text="0" 
                   Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
        </StackPanel>

        <!-- Hi Res Folder -->
        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,0,0,8">
            <TextBlock Text="Hi Res Folder:" VerticalAlignment="Center" Width="140"/>
            <TextBox x:Name="txtHiRes" Width="360" Margin="8,0" IsReadOnly="True"/>
            <Button Content="Browse..." Width="90" Click="BrowseHiRes_Click"/>
            <!-- Badge -->
            <Border Background="Green" CornerRadius="12" Width="24" Height="24" Margin="8,0,0,0">
                <TextBlock x:Name="lblHiResCount" Text="0" 
        Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
        </StackPanel>

        <!-- Destination Folder -->
        <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0,0,0,8">
            <TextBlock Text="Destination Folder:" VerticalAlignment="Center" Width="140"/>
            <TextBox x:Name="txtDest" Width="360" Margin="8,0" IsReadOnly="True"/>
            <Button Content="Browse..." Width="90" Click="BrowseDest_Click"/>
            <!-- Badge -->
            <Border Background="Green" CornerRadius="12" Width="24" Height="24" Margin="8,0,0,0">
                <TextBlock x:Name="lblDestCount" Text="0" 
Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
        </StackPanel>

        <!-- Options -->
        <StackPanel Orientation="Horizontal" Grid.Row="4" Margin="0,0,0,8">
            <CheckBox x:Name="chkOverwrite" Content="Overwrite if file exists" Margin="0,0,16,0"/>
            <CheckBox x:Name="chkIncludeExtensions" Content="Match by name only (ignore extensions)" IsChecked="True"/>
        </StackPanel>

        <!-- Actions + Progress -->
        <DockPanel Grid.Row="5">
            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,8">
                <Button x:Name="btnCopy" Content="Copy" Width="120" Click="Copy_Click"/>
                <ProgressBar x:Name="progress" Width="300" Height="18" Margin="16,0,0,0"/>
                <TextBlock x:Name="txtStatus" Margin="12,0,0,0" VerticalAlignment="Center"/>
            </StackPanel>

            <TextBox x:Name="txtLog"
         Foreground="#FF4CD60F"
         FontFamily="Consolas"
         FontSize="13"
         TextWrapping="Wrap"
         VerticalScrollBarVisibility="Auto"
         AcceptsReturn="True"
         IsReadOnly="True"
         Margin="0,8,0,0"
         Height="200">
                <TextBox.Background>
                    <!-- fade effect -->
                    <ImageBrush Opacity="0.2" Stretch="Uniform" ImageSource="/app.png"/>
                </TextBox.Background>
            </TextBox>
        </DockPanel>
    </Grid>    
</Window>
